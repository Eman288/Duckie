<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Duckie - @ViewData["Title"]</title>
   <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <!--<link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />-->
    <link rel="stylesheet" href="~/css/Dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/UnitLessonMainMenu.css" asp-append-version="true" />
    <link rel="icon" href="~/images/Home/icon.png" />
</head>
<body>
    @{
        var viewPath = ViewContext.View.Path;

        var viewName = System.IO.Path.GetFileNameWithoutExtension(viewPath);
    }
    <style>
        main {
            padding: 0 !important;
        }
    </style>
    @if (ViewData["Title"] == "Home")
    {
        <nav class="nav1">
            <img src="~/images/Layout/Icon.png" alt="Logo" />
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                </ul>
            <div class="buttons">
                <!-- check if the student is logged in or not -->
                <!--c-->
                @if (!String.IsNullOrEmpty(ViewBag.UserEmail))
                {
                    <a asp-controller="Student" asp-action="ShowProfile">
                        <img class="logo" src="~/images/Home/profile.png" alt="Profile" />
                    </a>
                }
                else
                {
                    <a asp-controller="Student" asp-action="Login" class="login">
                        Login
                    </a>
                    <a asp-controller="Student" asp-action="Register">
                        Join Us
                    </a>
                }
            </div>
        </nav>
    }
    else
    {
        <nav class="nav2">
            <div>
                <img src="~/images/Layout/Icon.png" alt="Logo" />
            </div>

            <div>
                <a asp-controller="Student" asp-action="ShowProfile">
                    <img class="logo" src="~/images/Home/profile.png" alt="Profile" />
                </a>
            </div>
        </nav>

    }
    
    <main role="main">
        @RenderBody();
    </main>
    <!--
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebApplication1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
