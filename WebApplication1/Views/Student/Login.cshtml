@model WebApplication1.Models.StudentLogin

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Duckie - Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/css/Login.css")">
</head>
<body>

    <div class="login-container">
        <h2 class="log">Login to Learn and Enjoy fast</h2>

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        <form method="post" action="@Url.Action("Authenticate", "Student")">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label w-100 text-start">Email:</label>
                <input asp-for="Email" class="form-control" placeholder="example@gmail.com" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label w-100 text-start">Password:</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- ✅ Fixed Checkbox Alignment -->
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger">@ViewBag.Message</div>
            }

            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>

        <p class="mt-3">
            Don't have an account?
            <a href="@Url.Action("Register", "Student")" style="color: #fdb913; font-weight: bold;">Register</a>
        </p>
    </div>

</body>
</html>
